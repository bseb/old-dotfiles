bindkey -k k7 detach # bind F7  to detach screen session from this terminal
bindkey -k k2 kill   # bind F2  to kill current screen window
bindkey -k k3 screen # bind F3  to create a new screen
bindkey -k k4 title  # bind F4 to rename current screen window
bindkey -k k5 prev   # bind F5 to move to previous window
bindkey -k k8 next   # bind F8 to move to next window


hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

